extends layout

mixin breadcrumb
  ul.breadcrumb
    for breadcrumb in breadcrumbs
        if breadcrumb.last
          li.active
            = env.helpers.breadcrumbText(breadcrumb)
        else
          li
            a(href=breadcrumb.url)= env.helpers.breadcrumbText(breadcrumb)

mixin space
  &#160;

mixin topics(topics)
  ul.topics
    for topic in topics
      li.topic
        a( href=topic.url )= topic.title
        span.arguments= topic.argument_names
        if topic.description
          +space
          -
          +space
          = topic.description
          +space
        if topic.api_url
          a.api( href=topic.api_url ) api
        +topics( topic.topics )

block content
  +breadcrumb
  article.article.intro
    header
      h2= page.title
  +topics( page.topics )
