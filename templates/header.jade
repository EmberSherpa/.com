!!! 5
block vars
  - var bodyclass = page.bodyclass || page.metadata.bodyclass;
  - var template = page.metadata.template.replace( ".jade", "");
  - var bodyclasses = [ bodyclass, template ]
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
          = page.title + ' | ' + locals.name
      link(rel='stylesheet', href='/assets/css/style.css')
  body(class=bodyclasses)
    header
      div.navbar.container
        div.navbar-inner
          div.container
            button.btn.btn-navbar(type=button,data-toggle=collapse)
            a.brand(href='/')
              span= "Ember Sherpa"
            div.nav-collapse.collapse
              ul.nav
                li.search
                  form.navbar-search.form-search
                    input.search-query(type="text",placeholder="keyword shortcut")
                    script(type="text/x-handlebars-template",id="suggestion-template").
                      <p class="suggestion-title">{{value}}{{#arguments}}{{/arguments}}</p>
                      <p class="suggestion-parent">
                        {{#if parent}}
                          {{#with parent}}
                            <a href="{{url}}">{{value}}</a>
                          {{/with}}
                        {{/if}}
                      </p>
                      <p class="suggestion-description">{{description}}</p>
              a.btn.btn-success(href='/cheatsheet/')
                = "Cheatsheet"
              a.btn.btn-info.mlm(href='/contribute/')
                = "Contribute"
